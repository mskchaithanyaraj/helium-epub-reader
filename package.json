{
  "name": "helium-epub",
  "private": true,
  "version": "0.0.1",
  "author": "Your Name",
  "description": "A minimal EPUB reader for Windows",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder --win",
    "start": "electron ."
  },
  "build": {
    "appId": "com.helium.epubreader",
    "productName": "Helium EPUB Reader",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "fileAssociations": [
      {
        "ext": "epub",
        "name": "EPUB Book",
        "description": "EPUB eBook file"
      }
    ]
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "electron": "^39.1.2",
    "electron-builder": "^26.0.12",
    "epubjs": "^0.3.93",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "vite": "^7.2.2",
    "wait-on": "^9.0.3"
  }
}
